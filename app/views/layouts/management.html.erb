<!DOCTYPE html>
<html lang="zh">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= render_page_title %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <%= javascript_include_tag "html5", :media => "all" %>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
    <%= yield :page_head %>
  </head>
  <body class="management-layout">

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="<%= AppConfig.site_url %>"><%= AppConfig.site_name %></a>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right">
              <%= current_user.taobao_user_nick %><%= link_to "退出", user_session_path(0), method: :delete, class: 'navbar-link logout-link' %>
            </p>
            <ul class="nav">
              <%= nav_link("前台首页", root_path(front: 1)) %>
              <%= nav_link("关于我们", about_path) %>
              <%= nav_link("帮助文档", AppConfig.docs_url) %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
          <ul class="nav nav-tabs nav-stacked">
            <%= nav_link("后台首页", root_path) %>
            <%= nav_link("分类管理", seller_cats_path) %>
            <%= nav_link("商品管理", items_path) %>
            <%= nav_link("高级设置", setting_path) %>
            <%= nav_link("样式定制", edit_template_setting_path(t: 'bread_crumb')) %>
            <%= nav_link("后台任务", back_tasks_path) %>
          </ul>
        </div><!--/span-->
        <div class="span10">
          <%= render 'commons/notices' %>
          <%= yield %>
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Cao Xiaohua 2013</p>
      </footer>

    </div><!--/.fluid-container-->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
    <%= yield :page_footer %>

  </body>
</html>
